<html>
  <head>
    <title>Edit this message</title>
  </head>
  <body>
    <h1>Edit this message {{ message.getText }} </h1>

    <form action = "/update/{{ message.getId }}" method = "post">
      <input name = "_method" type = "hidden" value = "patch">

      <label for = "new_text">Enter the next text </label>
      <input id = "new_text" name = "new_text" type = "text">
      <button type = "submit"> Update </label>
    </form>


    <form action = "/delete/{{ message.getId }}" method = "post">
      <input name = "_method" type = "hidden" value = "delete">
      <button type = "submit"> Delete </label>
    </form>
  </body>
</html>
